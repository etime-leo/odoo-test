        <menuitem name="Odoo Academy" id="manu_academy_sub" parent="manu_academy" sequence="2"/>
        
        <menuitem name="Courses" id="manu_academy_courses" parent="manu_academy_sub" sequence="3" action="course_list_action"/>
    </data>
</odoo>